<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
android:id="@+id/demo"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false">




        <RelativeLayout
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="1dp"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/maptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                android:textColor="@color/cardview_light_background"
                android:padding="12dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/maptext"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_map"
                android:id="@+id/dialog_map"
                android:onClick="map"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/demo2"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="1dp"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/demotext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:textColor="@color/cardview_light_background"
                android:padding="12dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/demotext2"
                android:layout_marginLeft="20dp"
                android:src="@drawable/cross_icon"
                android:id="@+id/dialog_fav"
                android:onClick="favourite"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/demo3"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/demotext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/cardview_light_background"
                android:padding="12dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/demotext3"
                android:layout_marginLeft="20dp"
                android:src="@drawable/email"
                android:onClick="email"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/demo4"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/demotext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textColor="@color/cardview_light_background"
                android:padding="12dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/demotext4"
                android:layout_marginLeft="20dp"
                android:onClick="message"
                android:src="@drawable/message"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/demo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/demotext5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textColor="@color/cardview_light_background"
                android:padding="12dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:gravity="bottom|end"
                android:layout_toRightOf="@+id/demotext5"
                android:onClick="call"
                android:src="@drawable/call"/>
        </RelativeLayout>




    </LinearLayout>





</RelativeLayout>